<section class="content-section">
  <div class="header">
    <img src="images/icon_favourites.png" alt="">
    <h1>Kids Movies</h1>
  </div>

  <fieldset>
    <label for="input">Select category:</label>
      <select class="select">
          <option value="0">All</option><!--all movies from db-->
    </select>
  </fieldset>
  <div id="movies">
  {{#each movies}}
    <div id="{{ movies_id }}" class="cover">
      <h3>{{ movies_title }}</h3>
      <img src="images/{{ movies_cover }}" alt="{{ movies_title }}">
    </div>
  {{/each}}
  </div>

</section>
<div class="lightbox">


<!--lightbox for movies page that contains all movie details/info-->




</div>
